<style lang="scss">
  section.mv {
    width: 100vw;
    height: 100vh;
    .swiper-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .swiper-slide {
      img {
        width: 100%;
        height: auto;
      }
    }
  }
</style>
<script>
  // スライド設定
  import Swiper, { Autoplay } from 'swiper'
  Swiper.use([Autoplay])

  import 'swiper/swiper-bundle.css'

  const mySwiper = new Swiper('.swiper-container', {
    loop: true,
    autoplay: {
      delay: 3000,
      disableOnInteraction: true
    },
    speed: 1000
  })
</script>
